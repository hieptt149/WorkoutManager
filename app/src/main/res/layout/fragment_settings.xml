<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context=".home.fragment.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ln_users_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_setting_item_height"
            android:orientation="horizontal"
            android:padding="@dimen/small_space"
            android:weightSum="10">

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/medium_space">

                <TextView
                    android:id="@+id/tv_users_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/name"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_users_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/age"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_users_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/gender"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_users_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/height"
                    android:textSize="@dimen/normal_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/tv_users_weight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="@string/weight"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_weight_chart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:src="@drawable/analytics" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_update_height_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/large_space"
            android:gravity="center_horizontal"
            android:text="@string/update_info"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/large_space"
            android:gravity="center_horizontal"
            android:text="@string/change_password"
            android:textStyle="italic" />


        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
